<% layout("/INCLUDE/boilerplate")%>
<style>
    .delete {
        text-decoration: underline;
        background-color: honeydew;
    }

    .card {
        margin: 5rem 2rem 0 4.5rem;
    }

    .card-body {
        margin: 1rem;
    }

    .row {
        display: flex;
        margin: 0 0 3rem 0;
    }
    h1{
        /* background-color: aqua; */
        background-image: url("blogs.jpg");
        max-width: 100%;
        height: 10rem;
    }
</style>
<h1>
    MOTIVE BLOGS
</h1>
<div class="row">
<%for(let M of motive){%>
    <div class="card" style="width: 20rem; height: 28rem;  ">
        <img src="<%=M.Image.url%>" class="card-img-top " alt="network issue" style="width: 15rem; height: 13rem;">
        <div class="card-body">
            <h5 class="card-title">
                <%=M.Title%>
            </h5>
            <p class="card-text">
                <%=M.Content1%>
            </p>

            <a href="/motive/<%=M._id%>" class="btn btn-primary">READ</a>
        </div>
        
            <form method="POST" action="/motive/<%=M._id%>?_method=Delete">
                <button>Delete</button>
            </form>
          
    </div>
    <%}%>
</div>